<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="262dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="@string/menu" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/employee" />

        <Button
            android:id="@+id/add_employee_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_employee" />

        <Button
            android:id="@+id/view_employee_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_employee" />

        <TextView
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="63dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule" />

        <Button
            android:id="@+id/create_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_schedule" />

        <Button
            android:id="@+id/view_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_schedule" />

        <Button
            android:id="@+id/email_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_schedule_to_employees" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>