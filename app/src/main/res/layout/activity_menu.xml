<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/blue_grey_700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="262dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/menu"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="45sp" />


        <TextView
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/employee" />

        <Button
            android:id="@+id/add_employee_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="@string/add_employee"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/white" />

        <Button
            android:textColor="@android:color/black"
            app:backgroundTint="@color/white"
            android:id="@+id/view_employee_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_employee" />

        <TextView
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="63dp" />

        <TextView
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule" />

        <Button
            android:textColor="@android:color/black"
            app:backgroundTint="@color/white"
            android:id="@+id/create_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_schedule" />

        <Button
            android:textColor="@android:color/black"
            app:backgroundTint="@color/white"
            android:id="@+id/email_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_schedule_to_employees" />

        <TextView
            android:id="@+id/spacer6"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>